<Page x:Class="ProjektInterfejsu.EncryptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektInterfejsu"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EncryptionPage">

    <Grid>
        <StackPanel Background="LightGray">
            <Grid Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label  Grid.Column="0" Content="Plik wejściowy" Margin="0,0,0,0"/>
                <TextBox Grid.Column="1" Padding="0,0,0,0" />
                <Button Grid.Column="2" Content="Wybierz plik" Margin="10,0,10,0"/>
            </Grid>
            <Grid Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label  Grid.Column="0" Content="Plik wejściowy" Margin="0,0,0,0"/>
                <TextBox Grid.Column="1" />
                <Button Grid.Column="2" Content="Wybierz plik" Margin="10,0,10,0"/>
            </Grid>
            <Grid Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label   Content="Tryb" Margin="0,0,10,0" />
                    <ComboBox Text="Tryb" Width="50">
                        <ComboBoxItem>ECB</ComboBoxItem>
                        <ComboBoxItem>CBC</ComboBoxItem>
                        <ComboBoxItem>CFB</ComboBoxItem>
                        <ComboBoxItem>OFB</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Label   Content="Długość klucza" Margin="0,0,10,0"/>
                    <ComboBox Text="Tryb" Width="50">
                        <ComboBoxItem>128</ComboBoxItem>
                        <ComboBoxItem >192</ComboBoxItem>
                        <ComboBoxItem >256</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Label   Content="Długość podbloku" Margin="0,0,10,0"/>
                    <ComboBox Text="Długość" Width="50" Height="26" VerticalAlignment="Top">
                        <ComboBoxItem >2</ComboBoxItem>
                        <ComboBoxItem  >4</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                
            </Grid>
            <StackPanel>
                <Label Content="Odbiorcy"/>
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Grid.Column="0" Margin="10,0,0,10" Height="100">
                        <ListViewItem>Marianna Jemielity</ListViewItem>
                        <ListViewItem>Paweł Rogackki</ListViewItem>
                        <ListViewItem>Jan Kowalski</ListViewItem>
                    </ListBox>
                    <StackPanel Grid.Column="1">
                        <Button Content="Dodaj" Margin="10,10,10,10"/>
                        <Button Content="Usuń" Margin="10,0,10,10"/>
                    </StackPanel>
                </Grid>


            </StackPanel>
            <Grid Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                   
                </Grid.ColumnDefinitions>
                <ProgressBar Grid.Column="0"/>
                <Button Grid.Column="1"  Margin="10,0,10,0"  Content="Szyfruj"/>
            </Grid>
           
            
        </StackPanel>
        
    </Grid>
</Page>
